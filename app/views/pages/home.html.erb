  <div class="container my-5">
    <div class="row d-flex flex-column my-5">
      <div class="col-lg-10 col-md-12">
        <h1 id="portfolioexamples" class="d-flex justify-content-end mt-5">FEATURE</h1>
        <h2 id="portfolioexamples" class="d-flex justify-content-end">WORK</h2>
      </div>
    </div>

    <%# _____________________ EXTENDED AWAY_____________________ %>
